@{
    int UserId = (int)Context.Session.GetInt32("userId");
}
@model Post
@await Html.PartialAsync("_NavBar")

<div class="container mt-5">
    <div class="card shadow">
        <h3 class="card-header">
            Edit Post
        </h3>
        <div class="card-body">
            <form asp-action="CreatePost" asp-controller="Posts" method="post">
                <input type="hidden" asp-for="UserId" value="@UserId">
                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="ImageUrl" class="form-label"></label>
                        <input asp-for="ImageUrl" class="form-control">
                        <span asp-validation-for="ImageUrl" class="text-danger h6 fw-light"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title" class="text-danger h6 fw-light"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="Medium" class="form-label"></label>
                        <input asp-for="Medium" class="form-control">
                        <span asp-validation-for="Medium" class="text-danger h6 fw-light"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="form-group mb-3 d-flex gap-3 justify-content-center">
                        <label asp-for="ForSale" class="form-label"></label>
                        <input asp-for="ForSale" class="form-check">
                        <span class="text-danger" asp-validation-for="ForSale"></span>
                    </div>
                </div>

                <div>
                    <input type="submit" value="Post" class="btn btn-primary w-25">
                </div>
            </form>
        </div>
    </div>
</div>