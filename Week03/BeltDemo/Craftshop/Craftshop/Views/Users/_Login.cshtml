@model LoginUser
<div class="card mt-3 shadow">
    <div class="card-header">Login</div>
    <div class="card-body">
        <form asp-action="Login" asp-controller="Users" method="Post">
            <div class="mb-3">
                <label asp-for="LoginEmail" class="form-label"></label>
                <input type="text" asp-for="LoginEmail" class="form-control">
                <span asp-validation-for="LoginEmail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LoginPassword" class="form-label"></label>
                <input type="text" asp-for="LoginPassword" class="form-control">
                <span asp-validation-for="LoginPassword" class="text-danger"></span>
            </div>
            <input type="submit" value="Login" class="btn btn-dark btn-m">
        </form>
    </div>
</div>