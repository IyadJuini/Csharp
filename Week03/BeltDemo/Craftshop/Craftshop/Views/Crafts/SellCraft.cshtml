@{
    int UserId = (int)Context.Session.GetInt32("userId");
}
@model Craft
@await Html.PartialAsync("_NavBar")

<div class="container mt-5">
    <div class="card shadow">
        <h3 class="card-header">
            Sell A Craft
        </h3>
        <div class="card-body">
            <form asp-action="CreateCraft" asp-controller="Crafts" method="post">
                <input type="hidden" asp-for="UserId" value="@UserId">
                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="ImageUrl" class="form-label"></label>
                        <input asp-for="ImageUrl" class="form-control">
                        <span asp-validation-for="ImageUrl" class="text-danger h4"></span>
                    </div>
                    <div class="col">
                            <label asp-for="Price"></label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">$</span>
                            <input type="text" class="form-control" asp-for="Price">
                            <span class="input-group-text">.00</span>
                        </div>
                            <span asp-validation-for="Price"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title" class="text-danger h4"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Quantity" class="form-label"></label>
                        <input asp-for="Quantity" class="form-control">
                        <span asp-validation-for="Quantity" class="text-danger h4"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger h4"></span>
                </div>
                <div>
                    <input type="submit" value="Post Listing" class="btn btn-dark w-25">
                </div>
            </form>
        </div>
    </div>
</div>