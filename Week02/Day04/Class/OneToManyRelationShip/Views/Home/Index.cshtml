@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="container text-center">
    <h1 class="display-4 mb-5 ">Welcome To Our Website</h1>
    <div class="row">
        <div class="col-6">
            <div class="border border-rounded p-2 bg-light bg-gradient-10">
                <h3>Register</h3>
                <form asp-action="Register" asp-controller="Home" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control">
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LuckyNumber" class="form-label"></label>
                        <input asp-for="LuckyNumber" class="form-control">
                        <span class="text-danger" asp-validation-for="LuckyNumber"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control">
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="form-group mb-3 d-flex gap-3 justify-content-center">
                        <label asp-for="IsSubscribed" class="form-label"></label>
                        <input asp-for="IsSubscribed" class="form-check">
                        <span class="text-danger" asp-validation-for="IsSubscribed"></span>
                    </div>
                    <div class="mb-3">
                        <input type="submit" class="btn btn-outline-primary w-50" value="Register">
                    </div>
                </form>
            </div>
        </div>
        <div class="col-6">
            <div class="border border-rounded p-2  bg-light bg-gradient-10">
                <h3>Login</h3>
                @await Html.PartialAsync("_Login")
            </div>
        </div>
    </div>
</div>