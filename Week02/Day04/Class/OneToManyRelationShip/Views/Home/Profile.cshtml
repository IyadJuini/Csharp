@{
    ViewData["Title"] = "Profile";
    int? userId = (int)Context.Session.GetInt32("userId");
    string? userName = Context.Session.GetString("username");
}
@model User

@await Html.PartialAsync("_Navbar")
<div class="container">

    <div>
        <div class="text-center p-3 ">
            <h1 class="display-4">Welcome , @userName!</h1>
        </div>
        <div class="card shadow border text-center p-4">
            <div class="card-text h4 ">
                Username : @Model.Username
            </div>
            <div class="card-text h4">
                Email : @Model.Email
            </div>
            <div class="card-text h4">
                Lucky Number : @Model.LuckyNumber
            </div>
            <div class="card-text h4">
                Is Subscribed : @(Model.IsSubscribed? "yes" : "No")
            </div>
            <div class="card-text h4"></div>
        </div>
            <div class="mt-4">
                @* .border.bg-light.bg-gardient-25>table.table-striped.hover>thead+body *@
                <div class="border bg-light bg-gardient-25">
                    <table class="table table-stripped hover">
                        <thead>
                            <tr >
                                <th>ID</th>
                                <th>Title</th>
                                <th>Subject</th>
                                <th>Content</th>
                                <th>Poster</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (Post post in Model.MyPosts)
                                {
                                    <tr>
                                        <td>@post.PostId</td>
                                        <td>@post.Title</td>
                                        <td>@post.Subject</td>
                                        <td>@post.Content</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</div>
