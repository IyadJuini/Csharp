﻿@{
    ViewData["Title"] = "Home Page";
}

@model List<Chef>

<div class="container">

    <div>
        <div class="text-center">
            <h1 class="display-4">Welcome!</h1>
            <h1 class="display-4">All Post List</h1>
        </div>
            <div class="">
                <div class="border bg-light bg-gardient-25">
                    <table class="table table-stripped hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Age</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (Chef chef in Model)
                                {
                                    <tr>
                                        <td>@chef.ChefId</td>
                                        <td>@chef.FirstName</td>
                                        <td>@chef.LastName</td>
                                        <td>@chef.Age()</td>
                                        <td>@chef.MyDishes.Count()</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</div>
