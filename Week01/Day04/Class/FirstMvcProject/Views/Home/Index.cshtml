@{
    ViewData["Title"] = "Home Page";
}
@model Song

<h1>🎶 Add Your Favorite Songs 🎶</h1>
@* .card.shadow.border>h4.card-head+.card-body *@
<div class="card shadow border p-3 mb-3">
    <h4 class="card-head text-danger text-center">Old Form Version</h4>
    <div class="card-body">
        <form action="songs/create" method="post">
            @* .form-group.mb-3*4>label+input.text.form-control *@
            <div class="form-group mb-3">
                <label for="" class="form-label">Title</label>
                <input type="text" class=" form-control" name="Title">
            </div>
            <div class="form-group mb-3">
                <label for="" class="form-label">Singer</label>
                <input type="text" class=" form-control" name="Singer">
            </div>
            <div class="form-group mb-3">
                <label for="" class="form-ckeck-label">Relase Year</label>
                <input type="number" class=" form-control" name="ReleaseYear">
            </div>
            <div class="d-flex gap-2 justify-content-center mb-3">
                <label for="" class="form-ckeck-labell">Is Explicit ?</label>
                <input type="checkbox" class=" form-check" name="IsExplict">
            </div>
            <button class="btn btn-outline-primary w-100"> Post Your Song 🎙️🎶🎵</button>
        </form>
    </div>
</div>
<div class="card shadow border p-3">
    <h4 class="card-head text-success text-center">Thanks ASP.NET Core Form</h4>
    <div class="card-body">
        <form asp-action="CreateSong" asp-controller="Home" method="post">
            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input class=" form-control" asp-for="Title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Singer" class="form-label"></label>
                <input class=" form-control" name="Singer">
                <span asp-validation-for="Singer" class="text-danger"></span>

            </div>
            <div class="form-group mb-3">
                <label asp-for="ReleaseYear" class="form-ckeck-label"></label>
                <input class=" form-control" asp-for="ReleaseYear">
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>

            </div>
            <div class="d-flex gap-2 justify-content-center mb-3">
                <label asp-for="IsExplicit" class="form-ckeck-labell">Is Explicit ?</label>
                <input class=" form-check" asp-for="IsExplicit">
            </div>
            <button class="btn btn-success w-100"> Post Your Song 🎙️🎶🎵</button>
        </form>
    </div>
</div>