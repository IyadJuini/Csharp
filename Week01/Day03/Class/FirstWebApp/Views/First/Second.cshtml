<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Document</title>
</head>
<body>
        <h1>Second View 🤖👿👁🤖</h1>
        <h4>User Name : @ViewBag.Name</h4>
        <h4>Favorite Number : @ViewBag.FavNumber</h4>
        @{
            for(var i=0; i < ViewBag.FavNumber; i++)
            {
                if(i%2 == 0)
                {
                    <h5>The number is even @i</h5>
                }
            }
        }
</body>
</html>